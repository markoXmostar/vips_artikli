<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.marko.mvips.activities.PinActivity">

    <EditText
        android:id="@+id/txtPass_pin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:enabled="false"
        android:fontFamily="monospace"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9999" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPass_pin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn2_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn3_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn5_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn8_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDelAll_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_delete_sweep_boja_aplikacije_24dp"
                android:paddingLeft="30dp"
                android:text="_"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn0_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnDelOne_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_backspace_boja_aplikacije_24dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnOK_pin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/OKtext"
                android:textAppearance="@style/mojTextStyleZaPinTipkovnicu" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtBrojPokusaja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textAppearance="@style/mojTextStyleZaPinTipkovnicu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
