<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list android:layout_width="match_parent" android:layout_height="match_parent">
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#86a8ef" android:startColor="#E8EBEF" android:type="linear" />

                    <stroke android:width="1dp" android:color="#df2e2e" />

                    <corners android:radius="4dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item android:width="50dp" android:height="50dp" android:gravity="bottom|right">
                <bitmap android:src="@drawable/ic_spinner" />
            </item>
        </layer-list>
    </item>

</selector>